@model List<Checkpont2.Models.User> 
@{

}<head>
    <h3>Users List</h3>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #f5f5f5;
        }
    </style>
</head>
<table>
    <thead>
        <tr>
           
            <th>Email</th>
            <th>UserName</th>
            <th>Occupation</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                
                <td>@user.UserEmail</td>
                <td>@user.UserName</td>
                <td>@user.UserOccupation</td>
              
            </tr>
        }
    </tbody>
    </table>

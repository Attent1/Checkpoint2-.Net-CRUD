@model User

<style>
    .form-group {
        display: flex;
        flex-direction: row;
        align-items: center;
        margin-bottom: 10px;
    }

        .form-group label {
            text-align: right;
            width: 150px;
            margin-right: 10px;
        }

    .tamanhoInput {
        width: 400px;
    }
</style>

<div>
    <h3>Login Success</h3>  
    <form asp-controller="Login" asp-action="Delete" method="delete">
        <input type="hidden" id="id" class="border-2 tamanhoInput" name="id" value="@Model.Id" />
        <div class="form-group">
            <label for="userEmail">E-mail:</label>
            <input type="text" id="userEmail" class="border-2 tamanhoInput" name="userEmail" value="@Model.UserEmail"/>
        </div>
        <div class="form-group">
                <label for="userOccupation">Occupation:</label>
            <input type="text" id="userOccupation" class="border-2 tamanhoInput" name="userOccupation" value="@Model.UserOccupation"/>
        </div>
        <div class="form-group row mb-2">
            <div class="col-sm-10 offset-sm-2 me-10">
                <button type="submit" class="btn btn-primary">Delete account</button>
            </div>
        </div>
    </form>
    <form asp-controller="Cadastro" asp-action="Update">
        <input type="hidden" id="id" class="border-2 tamanhoInput" name="id" value="@Model.Id" />
        <div class="form-group row mb-2">
            <div class="col-sm-10 offset-sm-2 me-10">
                <button class="btn btn-primary">Update your registration information</button>
            </div>
        </div>
    </form>
</div>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">

    <form asp-controller="Cadastro" asp-action="SignUp" method="post">
        <div class="form-group row mb-2">
            <label for="UserEmail" class="col-sm-2 col-form-label">Email:</label>
            <div class="col-sm-10">
                <input name="UserEmail" type="email" class="form-control" id="exampleFormControlInput1" placeholder="rafael@fiap.com" style="width: 500px;">
            </div>
        </div>
        <div class="form-group row mb-2">
            <label for="UserName" class="col-sm-2 col-form-label">User name:</label>
            <div class="col-sm-10">
                <input name="UserName" class="form-control" type="text" placeholder="rafael123" style="width: 300px;">
            </div>
        </div>
        <div class="form-group row mb-2">
            <label for="UserPassword" class="col-sm-2 col-form-label">Password:</label>
            <div class="col-sm-10">
                <input name="UserPassword" type="password" class="form-control" style="width: 220px;">
            </div>
        </div>
        <div class="form-group row mb-2">
            <label for="UserOccupation" class="col-sm-2 col-form-label">Occupation:</label>
            <div class="col-sm-10">
                <input name="UserOccupation" class="form-control" type="text" placeholder="Data Analyst" style="width: 200px;">
            </div>
        </div>

        <div class="form-group row mb-2">
            <div class="col-sm-10 offset-sm-2 me-10">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </div>
    </form>

</div>
